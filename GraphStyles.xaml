<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:graphsharp="clr-namespace:GraphSharp.Controls;assembly=GraphSharp.Controls">

    <!-- DataTemplate pour les sommets -->
    <DataTemplate x:Key="VertexTemplate">
        <Ellipse Width="30" Height="30" Fill="LightBlue" Stroke="Black" StrokeThickness="1">
            <Ellipse.ToolTip>
                <TextBlock Text="{Binding}" />
            </Ellipse.ToolTip>
        </Ellipse>
    </DataTemplate>

    <!-- Style pour le GraphLayout -->
    <Style TargetType="graphsharp:GraphLayout">
        <Setter Property="VertexTemplate" Value="{StaticResource VertexTemplate}" />
    </Style>
</ResourceDictionary>