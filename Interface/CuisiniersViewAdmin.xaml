<Page x:Class="ProbSciANA.Interface.CuisiniersViewAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:models="clr-namespace:ProbSciANA"
      xmlns:iface="clr-namespace:ProbSciANA.Interface"
      Title="CuisiniersViewAdmin">

        <Page.Resources>
                <!-- 1) Converter pour retourner la premiÃ¨re valeur non-null -->
                <iface:FirstNonNullConverter x:Key="FirstNonNullConverter"/>

                <!-- 2) DataTemplates pour chaque type dâ€™objet -->
                <DataTemplate DataType="{x:Type models:Commande}">
                        <Border Padding="10"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                Margin="0,5">
                                <StackPanel>
                                        <TextBlock Text="DÃ©tail Commande"
                                                   FontWeight="Bold"
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding Nom}"
                                                   Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Prix, StringFormat=Prix : {0} â‚¬}"/>
                                        <TextBlock Text="{Binding Statut, StringFormat=Statut : {0}}"/>
                                        <TextBlock Text="{Binding Date_commande, StringFormat=Date : {0:dd/MM/yyyy}}"/>
                                        <TextBlock Text="{Binding NomClient, StringFormat=Client : {0}}"/>
                                        <TextBlock Text="{Binding NomCuisinier, StringFormat=Cuisinier : {0}}"/>
                                </StackPanel>
                        </Border>
                </DataTemplate>

                <DataTemplate DataType="{x:Type models:Avis}">
                        <Border Padding="10"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                Margin="0,5">
                                <StackPanel>
                                        <TextBlock Text="DÃ©tail Avis"
                                                   FontWeight="Bold"
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding Note, StringFormat=Note : {0}/5}"
                                                   Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Commentaire}"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Date_avis, StringFormat=PostÃ© le {0:dd/MM/yyyy}}"/>
                                        <TextBlock Text="{Binding NomClient, StringFormat=Client : {0}}"/>
                                </StackPanel>
                        </Border>
                </DataTemplate>

                <DataTemplate DataType="{x:Type models:Utilisateur}">
                        <Border Padding="10"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                Margin="0,5">
                                <StackPanel>
                                        <TextBlock Text="DÃ©tail Cuisinier"
                                                   FontWeight="Bold"
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding Prenom}"
                                                   Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Nom}"/>
                                        <TextBlock Text="{Binding Adresse, StringFormat=Adresse : {0}}"/>
                                        <TextBlock Text="{Binding Email, StringFormat=Email : {0}}"/>
                                </StackPanel>
                        </Border>
                </DataTemplate>
        </Page.Resources>

        <Grid>
                <Image Source="Images/fondgridrouge.jpg"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       IsHitTestVisible="False"
                       Opacity="0.25"/>

                <DockPanel LastChildFill="True">

                        <!-- BANDEAU STYLE UBER -->
                        <Grid DockPanel.Dock="Top"
                              Height="50"
                              Background="Black">
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Content="ðŸŒ™ Mode"
                                        Foreground="White"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontWeight="Bold"
                                        Padding="10,0"
                                        Click="BtnMode_Click"/>

                                <Button Grid.Column="1"
                                        Content="ðŸ  Accueil"
                                        Foreground="White"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontWeight="Bold"
                                        Padding="10,0"
                                        Click="BtnAccueil_Click"/>

                                <StackPanel Grid.Column="2"/>

                                <Button Grid.Column="3"
                                        Content="Clients"
                                        Foreground="White"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontWeight="Bold"
                                        Padding="10,0"
                                        Click="BtnClients_Click"/>

                                <Button Grid.Column="4"
                                        Content="Cuisiniers"
                                        Foreground="White"
                                        Background="#BEE6FD"
                                        BorderThickness="0"
                                        FontWeight="Bold"
                                        Padding="10,0"
                                        Click="BtnCuisiniers_Click"/>

                                <Button Grid.Column="5"
                                        Content="Commandes"
                                        Foreground="White"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontWeight="Bold"
                                        Padding="10,0"
                                        Click="BtnCommandes_Click"/>
                        </Grid>

                        <!-- FLÃˆCHES NAVIGATION (Chrome style) -->
                        <Grid DockPanel.Dock="Top"
                              Height="50"
                              Background="Transparent">
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Margin="10,0,0,0">

                                        <!-- BACK -->
                                        <Button x:Name="BtnBack"
                                                Width="32"
                                                Height="32"
                                                Margin="2"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="PrÃ©cÃ©dent"
                                                Click="BtnBack_Click">
                                                <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border"
                                                                        Width="32"
                                                                        Height="32"
                                                                        CornerRadius="16"
                                                                        Background="Transparent"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center">
                                                                        <Viewbox Width="16"
                                                                                 Height="16">
                                                                                <Grid Width="24"
                                                                                      Height="24">
                                                                                        <Path x:Name="backArrow"
                                                                                              StrokeThickness="2"
                                                                                              StrokeLineJoin="Round"
                                                                                              StrokeStartLineCap="Round"
                                                                                              StrokeEndLineCap="Round"
                                                                                              Data="M14,4 L6,12 L14,20"
                                                                                              HorizontalAlignment="Center"
                                                                                              VerticalAlignment="Center"/>
                                                                                </Grid>
                                                                        </Viewbox>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver"
                                                                                 Value="True">
                                                                                <Setter TargetName="border"
                                                                                        Property="Background"
                                                                                        Value="#EEE"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsEnabled"
                                                                                 Value="True">
                                                                                <Setter TargetName="backArrow"
                                                                                        Property="Stroke"
                                                                                        Value="Black"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsEnabled"
                                                                                 Value="False">
                                                                                <Setter TargetName="backArrow"
                                                                                        Property="Stroke"
                                                                                        Value="Gray"/>
                                                                        </Trigger>
                                                                </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                </Button.Template>
                                        </Button>

                                        <!-- FORWARD -->
                                        <Button x:Name="BtnForward"
                                                Width="32"
                                                Height="32"
                                                Margin="2"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="Suivant"
                                                Click="BtnForward_Click">
                                                <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border"
                                                                        Width="32"
                                                                        Height="32"
                                                                        CornerRadius="16"
                                                                        Background="Transparent"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center">
                                                                        <Viewbox Width="16"
                                                                                 Height="16">
                                                                                <Grid Width="24"
                                                                                      Height="24">
                                                                                        <Path x:Name="forwardArrow"
                                                                                              StrokeThickness="2"
                                                                                              StrokeLineJoin="Round"
                                                                                              StrokeStartLineCap="Round"
                                                                                              StrokeEndLineCap="Round"
                                                                                              Data="M4,4 L12,12 L4,20"
                                                                                              HorizontalAlignment="Center"
                                                                                              VerticalAlignment="Center"/>
                                                                                </Grid>
                                                                        </Viewbox>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver"
                                                                                 Value="True">
                                                                                <Setter TargetName="border"
                                                                                        Property="Background"
                                                                                        Value="#EEE"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsEnabled"
                                                                                 Value="True">
                                                                                <Setter TargetName="forwardArrow"
                                                                                        Property="Stroke"
                                                                                        Value="Black"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsEnabled"
                                                                                 Value="False">
                                                                                <Setter TargetName="forwardArrow"
                                                                                        Property="Stroke"
                                                                                        Value="Gray"/>
                                                                        </Trigger>
                                                                </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                </Button.Template>
                                        </Button>
                                </StackPanel>

                                <!-- Titre -->
                                <TextBlock Text="Gestion des Cuisiniers"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Grid.Column="1"/>

                                <!-- Bouton âž• -->
                                <Button Content="âž•"
                                        ToolTip="Ajouter un client"
                                        FontSize="16"
                                        Width="32"
                                        Height="32"
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="BtnAjouter_Click"
                                        Grid.Column="2"/>

                        </Grid>


                        <!-- Liste des cuisiniers -->
                        <Grid>
                                <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                </Grid.ColumnDefinitions>
                                <DataGrid x:Name="dataGridCuisiniers"
                                          Grid.Column="0"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          HeadersVisibility="Column"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Top"
                                          Margin="10"
                                          SelectionChanged="dataGridCuisiniers_SelectionChanged"
                                          ColumnWidth="*"
                                          CellEditEnding="dataGridCuisiniers_CellEditEnding">
                                        <DataGrid.Columns>
                                                <DataGridTextColumn Header="ID"
                                                                    Binding="{Binding Id_utilisateur}"
                                                                    IsReadOnly="True"/>
                                                <DataGridTextColumn Header="Nom"
                                                                    Binding="{Binding Nom}"/>
                                                <DataGridTextColumn Header="PrÃ©nom"
                                                                    Binding="{Binding Prenom}"/>
                                                <DataGridTextColumn Header="Adresse"
                                                                    Binding="{Binding Adresse}"/>
                                                <DataGridTextColumn Header="Email"
                                                                    Binding="{Binding Email}"/>
                                                <DataGridTextColumn Header="Station"
                                                                    Binding="{Binding NomStation}"/>
                                                <DataGridTextColumn Header="Gains"
                                                                    Binding="{Binding Gains}"/>
                                        </DataGrid.Columns>
                                </DataGrid>

                                <StackPanel x:Name="FicheCuisinier"
                                            Grid.Column="1"
                                            Margin="10"
                                            Background="#FFF3F3F3"
                                            VerticalAlignment="Top">
                                        <DockPanel LastChildFill="True"
                                                   Margin="0 0 0 10">
                                                <TextBlock Text="Fiche Cuisiniers"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           DockPanel.Dock="Left"/>

                                                <Grid DockPanel.Dock="Top"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center">
                                                        <Image Source="{Binding Photo}"
                                                               Width="100"
                                                               Height="100"
                                                               Stretch="UniformToFill"
                                                               IsHitTestVisible="False"
                                                               Margin="0,10,0,0"/>
                                                </Grid>

                                                <Button Content="ðŸ—‘ï¸"
                                                        FontSize="14"
                                                        Width="30"
                                                        Height="30"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Click="BtnSupprimer_Click"
                                                        DockPanel.Dock="Right"/>
                                        </DockPanel>
                                        <Grid Margin="0 0 0 10">
                                                <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Nom -->
                                                <TextBlock Text="Nom :"
                                                           FontWeight="Bold"
                                                           Margin="0 0 10 5"
                                                           Grid.Row="0"
                                                           Grid.Column="0"/>
                                                <TextBlock Text="{Binding Nom}"
                                                           HorizontalAlignment="Right"
                                                           Grid.Row="0"
                                                           Grid.Column="1"/>

                                                <!-- PrÃ©nom -->
                                                <TextBlock Text="PrÃ©nom :"
                                                           FontWeight="Bold"
                                                           Margin="0 0 10 5"
                                                           Grid.Row="1"
                                                           Grid.Column="0"/>
                                                <TextBlock Text="{Binding Prenom}"
                                                           HorizontalAlignment="Right"
                                                           Grid.Row="1"
                                                           Grid.Column="1"/>

                                                <!-- Email -->
                                                <TextBlock Text="Email :"
                                                           FontWeight="Bold"
                                                           Margin="0 0 10 5"
                                                           Grid.Row="2"
                                                           Grid.Column="0"/>
                                                <TextBlock Text="{Binding Email}"
                                                           HorizontalAlignment="Right"
                                                           Grid.Row="2"
                                                           Grid.Column="1"/>

                                                <!-- Adresse -->
                                                <TextBlock Text="Adresse :"
                                                           FontWeight="Bold"
                                                           Margin="0 0 10 5"
                                                           Grid.Row="3"
                                                           Grid.Column="0"/>
                                                <TextBlock Text="{Binding Adresse}"
                                                           HorizontalAlignment="Right"
                                                           Grid.Row="3"
                                                           Grid.Column="1"/>

                                                <!-- Station -->
                                                <TextBlock Text="Station :"
                                                           FontWeight="Bold"
                                                           Margin="0 0 10 0"
                                                           Grid.Row="6"
                                                           Grid.Column="0"/>
                                                <TextBlock Text="{Binding NomStation}"
                                                           HorizontalAlignment="Right"
                                                           Grid.Row="6"
                                                           Grid.Column="1"/>
                                        </Grid>
                                        <StackPanel>
                                                <Expander Header="Commandes effectuÃ©es"
                                                          Margin="0,10,0,0">
                                                        <ListBox x:Name="ListCommandes"
                                                                 ItemsSource="{Binding Commandes_effectuees}"
                                                                 DisplayMemberPath="Nom"
                                                                 SelectionChanged="OnListCommandes_Selected"/>
                                                </Expander>

                                                <Expander Header="Avis reÃ§us"
                                                          Margin="0,10,0,0">
                                                        <ListBox x:Name="ListAvis"
                                                                 ItemsSource="{Binding Avis_recus}"
                                                                 DisplayMemberPath="Commentaire"
                                                                 SelectionChanged="OnListAvis_Selected"/>
                                                </Expander>

                                                <Expander Header="Clients associÃ©s"
                                                          Margin="0,10,0,0">
                                                        <ListBox x:Name="ListClients"
                                                                 ItemsSource="{Binding SesClients}"
                                                                 DisplayMemberPath="Prenom"
                                                                 SelectionChanged="OnListClients_Selected"/>
                                                </Expander>

                                                <!-- Le dÃ©tail unique qui se met Ã  jour selon la sÃ©lection -->
                                                <ContentControl Margin="0,20,0,0">
                                                        <ContentControl.Content>
                                                                <MultiBinding Converter="{StaticResource FirstNonNullConverter}">
                                                                        <!-- On teste dâ€™abord Avis -->
                                                                        <Binding ElementName="ListAvis"
                                                                                 Path="SelectedItem"/>
                                                                        <!-- puis Cuisiniers -->
                                                                        <Binding ElementName="ListCuisiniers"
                                                                                 Path="SelectedItem"/>
                                                                        <!-- et enfin Commandes -->
                                                                        <Binding ElementName="ListCommandes"
                                                                                 Path="SelectedItem"/>
                                                                </MultiBinding>
                                                        </ContentControl.Content>
                                                </ContentControl>
                                        </StackPanel>
                                </StackPanel>

                                <Border x:Name="AddPane"
                                        Grid.Column="2"
                                        Background="#FFF"
                                        BorderBrush="#DDD"
                                        BorderThickness="1"
                                        Padding="20"
                                        Visibility="Collapsed"
                                        Panel.ZIndex="10">

                                        <StackPanel>
                                                <TextBlock Text="Ajouter un cuisinier"
                                                           FontSize="22"
                                                           FontWeight="Bold"
                                                           Margin="0 0 0 20"/>

                                                <TextBlock Text="PrÃ©nom"/>
                                                <TextBox x:Name="TxtPrenom"
                                                         Margin="0 0 0 10"/>
                                                <TextBlock Text="Nom"/>
                                                <TextBox x:Name="TxtNom"
                                                         Margin="0 0 0 10"/>
                                                <TextBlock Text="Adresse"/>
                                                <TextBox x:Name="TxtAdresse"
                                                         Margin="0 0 0 10"/>
                                                <TextBlock Text="TÃ©lÃ©phone"/>
                                                <TextBox x:Name="TxtTel"
                                                         Margin="0 0 0 10"/>
                                                <TextBlock Text="Email"/>
                                                <TextBox x:Name="TxtEmail"
                                                         Margin="0 0 0 20"/>

                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Right">
                                                        <Button Style="{StaticResource PillButton}"
                                                                Content="âœ”ï¸ Valider"
                                                                Click="BtnValiderAjout_Click"/>

                                                        <Button Style="{StaticResource PillButton}"
                                                                Background="#E53935"
                                                                Content="âŒ Annuler"
                                                                Click="BtnAnnulerAjout_Click"/>
                                                </StackPanel>
                                        </StackPanel>
                                </Border>
                        </Grid>
                </DockPanel>
        </Grid>
</Page>
