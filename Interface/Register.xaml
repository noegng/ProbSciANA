<Page x:Class="ProbSciANA.Interface.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register">

    <Grid>
        <Image Source="Images/gray.png"
               Stretch="UniformToFill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               IsHitTestVisible="False"/>

        <DockPanel>
            <!-- BANDEAU STYLE UBER -->
            <Grid DockPanel.Dock="Top"
                  Background="Black"
                  Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Bouton Mode -->
                <Button Grid.Column="0"
                        Content="ðŸŒ™ Mode"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Padding="10,0"
                        Click="BtnMode_Click"/>

                <!-- Bouton Accueil -->
                <Button Grid.Column="1"
                        Content="ðŸ  Accueil"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Padding="10,0"
                        Click="BtnAccueil_Click"/>

                <!-- Espace vide -->
                <StackPanel Grid.Column="2"/>

                <!-- Connexion -->
                <Button Grid.Column="3"
                        Content="Connexion"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Padding="10,0"
                        Click="BtnConnexion_Click"/>
            </Grid>

            <!-- FLÃˆCHES NAVIGATION CENTRÃ‰ES STYLE CHROME -->
            <Grid DockPanel.Dock="Top"
                  Height="50">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Margin="10,5,0,0">

                    <!-- BOUTON BACK -->
                    <Button x:Name="BtnBack"
                            Width="32"
                            Height="32"
                            Margin="2"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="PrÃ©cÃ©dent"
                            Click="BtnBack_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        CornerRadius="16"
                                        Background="Transparent"
                                        Width="32"
                                        Height="32"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <Viewbox Width="16"
                                             Height="16"
                                             Stretch="Uniform">
                                        <Grid Width="24"
                                              Height="24">
                                            <Path x:Name="backArrow"
                                                  StrokeThickness="2"
                                                  StrokeLineJoin="Round"
                                                  StrokeStartLineCap="Round"
                                                  StrokeEndLineCap="Round"
                                                  Data="M12,4 L4,12 L12,20"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        </Grid>
                                    </Viewbox>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter TargetName="border"
                                                Property="Background"
                                                Value="#EEE"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled"
                                             Value="True">
                                        <Setter TargetName="backArrow"
                                                Property="Stroke"
                                                Value="Black"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled"
                                             Value="False">
                                        <Setter TargetName="backArrow"
                                                Property="Stroke"
                                                Value="Gray"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- BOUTON FORWARD -->
                    <Button x:Name="BtnForward"
                            Width="32"
                            Height="32"
                            Margin="2"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Suivant"
                            Click="BtnForward_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        CornerRadius="16"
                                        Background="Transparent"
                                        Width="32"
                                        Height="32"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <Viewbox Width="16"
                                             Height="16"
                                             Stretch="Uniform">
                                        <Grid Width="24"
                                              Height="24">
                                            <Path x:Name="forwardArrow"
                                                  StrokeThickness="2"
                                                  StrokeLineJoin="Round"
                                                  StrokeStartLineCap="Round"
                                                  StrokeEndLineCap="Round"
                                                  Data="M4,4 L12,12 L4,20"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        </Grid>
                                    </Viewbox>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter TargetName="border"
                                                Property="Background"
                                                Value="#EEE"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled"
                                             Value="True">
                                        <Setter TargetName="forwardArrow"
                                                Property="Stroke"
                                                Value="Black"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled"
                                             Value="False">
                                        <Setter TargetName="forwardArrow"
                                                Property="Stroke"
                                                Value="Gray"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </Grid>

            <!-- Contenu principal -->
            <StackPanel DockPanel.Dock="Top"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="Inscription"
                           FontSize="20"
                           Margin="0,0,0,20"/>

                <TextBlock Text="RÃ´le :"
                           Margin="5"/>
                <ComboBox x:Name="RoleComboBox"
                          Width="200"
                          Margin="5">
                    <ComboBoxItem Content="Client"/>
                    <ComboBoxItem Content="Cuisinier"/>
                    <ComboBoxItem Content="Entreprise"/>
                    <ComboBoxItem Content="Client et Cuisinier"/>
                </ComboBox>

                <!-- Champ pour le nom -->
                <TextBlock Text="Nom :"
                           Margin="5,0,0,5"/>
                <TextBox x:Name="NomTextBox"
                         Width="200"
                         Height="25"
                         Margin="5"/>

                <!-- Champ pour le prÃ©nom -->
                <TextBlock Text="PrÃ©nom :"
                           Margin="5,10,0,5"/>
                <TextBox x:Name="PrenomTextBox"
                         Width="200"
                         Height="25"
                         Margin="5"/>

                <!-- Champ pour l'adresse -->
                <TextBlock Text="Adresse :"
                           Margin="5,10,0,5"/>
                <TextBox x:Name="AdresseTextBox"
                         Width="200"
                         Height="25"
                         Margin="5"/>

                <!-- Champ pour l'email -->
                <TextBlock Text="Email :"
                           Margin="5,10,0,5"/>
                <TextBox x:Name="EmailTextBox"
                         Width="200"
                         Height="25"
                         Margin="5"/>

                <!-- Champ pour le mot de passe -->
                <TextBlock Text="Mot de passe :"
                           Margin="5,10,0,5"/>
                <PasswordBox x:Name="MdpTextBox"
                             Width="200"
                             Height="25"
                             Margin="5"/>

                <!-- Bouton Valider -->
                <Button Style="{StaticResource MenuButtonStyle}"
                        Content="Valider"
                        Width="200"
                        Height="35"
                        Margin="5"
                        Click="BtnValider_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
