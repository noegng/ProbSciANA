<Page x:Class="ProbSciANA.Interface.CuisinierDashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="Cuisinier Dashboard">

    <DockPanel LastChildFill="True">

        <!-- BANDEAU STYLE UBER -->
        <Grid DockPanel.Dock="Top"
              Height="50"
              Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="👤 Mode"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Padding="10,0"
                    Click="BtnMode_Click"/>

            <Button Grid.Column="1"
                    Content="🏠 Accueil"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Padding="10,0"
                    Click="BtnAccueil_Click"/>

            <StackPanel Grid.Column="2"/>

            <Button Grid.Column="3"
                    Content="Commandes"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Padding="10,0"
                    Click="AfficherCommandes_Click"/>

            <Button Grid.Column="4"
                    Content="Avis"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Padding="10,0"
                    Click="AfficherAvis_Click"/>

            <Button Grid.Column="5"
                    Content="Plats"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Padding="10,0"
                    Click="AfficherPlats_Click"/>

            <Button Grid.Column="6"
                    Content="Clients"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Padding="10,0"
                    Click="AfficherClients_Click"/>
        </Grid>

        <Grid DockPanel.Dock="Top"
              Height="50"
              Background="Transparent"
              VerticalAlignment="Top"
              Margin="0,2,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0">

                <!-- BACK -->
                <Button x:Name="BtnBack"
                        Width="32"
                        Height="32"
                        Margin="2"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Précédent"
                        Click="BtnBack_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Width="32"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="Transparent"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Viewbox Width="16"
                                         Height="16">
                                    <Grid Width="24"
                                          Height="24">
                                        <Path x:Name="backArrow"
                                              StrokeThickness="2"
                                              StrokeLineJoin="Round"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round"
                                              Data="M14,4 L6,12 L14,20"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Grid>
                                </Viewbox>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="border"
                                            Property="Background"
                                            Value="#EEE"/>
                                </Trigger>
                                <Trigger Property="IsEnabled"
                                         Value="True">
                                    <Setter TargetName="backArrow"
                                            Property="Stroke"
                                            Value="Black"/>
                                </Trigger>
                                <Trigger Property="IsEnabled"
                                         Value="False">
                                    <Setter TargetName="backArrow"
                                            Property="Stroke"
                                            Value="Gray"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- FORWARD -->
                <Button x:Name="BtnForward"
                        Width="32"
                        Height="32"
                        Margin="2"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Suivant"
                        Click="BtnForward_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Width="32"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="Transparent"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Viewbox Width="16"
                                         Height="16">
                                    <Grid Width="24"
                                          Height="24">
                                        <Path x:Name="forwardArrow"
                                              StrokeThickness="2"
                                              StrokeLineJoin="Round"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round"
                                              Data="M4,4 L12,12 L4,20"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Grid>
                                </Viewbox>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="border"
                                            Property="Background"
                                            Value="#EEE"/>
                                </Trigger>
                                <Trigger Property="IsEnabled"
                                         Value="True">
                                    <Setter TargetName="forwardArrow"
                                            Property="Stroke"
                                            Value="Black"/>
                                </Trigger>
                                <Trigger Property="IsEnabled"
                                         Value="False">
                                    <Setter TargetName="forwardArrow"
                                            Property="Stroke"
                                            Value="Gray"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Titre -->
            <TextBlock Text="Gestion des Clients"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Grid.Column="1"/>
        </Grid>

    </DockPanel>
</Page>