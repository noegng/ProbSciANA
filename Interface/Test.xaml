<Page x:Class="ProbSciANA.Interface.Test"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Test">

        <Grid>
                <Image Source="Images/fondgridrouge.jpg"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       IsHitTestVisible="False"/>

                <DockPanel>

                        <!-- BANDEAU STYLE UBER -->
                        <Grid DockPanel.Dock="Top"
                              Background="Black"
                              Height="50">
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Bouton Mode -->
                                <Button Grid.Column="0"
                                        Content="🌙 Mode"
                                        Foreground="White"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontWeight="Bold"
                                        Padding="10,0"
                                        Click="BtnMode_Click"/>

                                <!-- Bouton Accueil -->
                                <Button Grid.Column="1"
                                        Content="🏠 Accueil"
                                        Foreground="White"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontWeight="Bold"
                                        Padding="10,0"
                                        Click="BtnAccueil_Click"/>

                                <!-- Espace vide -->
                                <StackPanel Grid.Column="2"/>
                        </Grid>

                        <!-- FLÈCHES NAVIGATION CENTRÉES STYLE CHROME -->
                        <Grid DockPanel.Dock="Top"
                              Height="50">
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Left"
                                            Margin="10,5,0,0">

                                        <!-- BOUTON BACK -->
                                        <Button x:Name="BtnBack"
                                                Width="32"
                                                Height="32"
                                                Margin="2"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="Précédent"
                                                Click="BtnBack_Click">
                                                <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border"
                                                                        CornerRadius="16"
                                                                        Background="Transparent"
                                                                        Width="32"
                                                                        Height="32"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center">
                                                                        <Viewbox Width="16"
                                                                                 Height="16"
                                                                                 Stretch="Uniform">
                                                                                <Grid Width="24"
                                                                                      Height="24">
                                                                                        <Path x:Name="backArrow"
                                                                                              StrokeThickness="2"
                                                                                              StrokeLineJoin="Round"
                                                                                              StrokeStartLineCap="Round"
                                                                                              StrokeEndLineCap="Round"
                                                                                              Data="M12,4 L4,12 L12,20"
                                                                                              HorizontalAlignment="Center"
                                                                                              VerticalAlignment="Center"/>
                                                                                </Grid>
                                                                        </Viewbox>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver"
                                                                                 Value="True">
                                                                                <Setter TargetName="border"
                                                                                        Property="Background"
                                                                                        Value="#EEE"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsEnabled"
                                                                                 Value="True">
                                                                                <Setter TargetName="backArrow"
                                                                                        Property="Stroke"
                                                                                        Value="Black"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsEnabled"
                                                                                 Value="False">
                                                                                <Setter TargetName="backArrow"
                                                                                        Property="Stroke"
                                                                                        Value="Gray"/>
                                                                        </Trigger>
                                                                </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                </Button.Template>
                                        </Button>

                                        <!-- BOUTON FORWARD -->
                                        <Button x:Name="BtnForward"
                                                Width="32"
                                                Height="32"
                                                Margin="2"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="Suivant"
                                                Click="BtnForward_Click">
                                                <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border"
                                                                        CornerRadius="16"
                                                                        Background="Transparent"
                                                                        Width="32"
                                                                        Height="32"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center">
                                                                        <Viewbox Width="16"
                                                                                 Height="16"
                                                                                 Stretch="Uniform">
                                                                                <Grid Width="24"
                                                                                      Height="24">
                                                                                        <Path x:Name="forwardArrow"
                                                                                              StrokeThickness="2"
                                                                                              StrokeLineJoin="Round"
                                                                                              StrokeStartLineCap="Round"
                                                                                              StrokeEndLineCap="Round"
                                                                                              Data="M4,4 L12,12 L4,20"
                                                                                              HorizontalAlignment="Center"
                                                                                              VerticalAlignment="Center"/>
                                                                                </Grid>
                                                                        </Viewbox>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver"
                                                                                 Value="True">
                                                                                <Setter TargetName="border"
                                                                                        Property="Background"
                                                                                        Value="#EEE"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsEnabled"
                                                                                 Value="True">
                                                                                <Setter TargetName="forwardArrow"
                                                                                        Property="Stroke"
                                                                                        Value="Black"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsEnabled"
                                                                                 Value="False">
                                                                                <Setter TargetName="forwardArrow"
                                                                                        Property="Stroke"
                                                                                        Value="Gray"/>
                                                                        </Trigger>
                                                                </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                </Button.Template>
                                        </Button>

                                </StackPanel>
                        </Grid>

                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="Tester les méthodes"
                                           FontSize="20"
                                           Margin="0,0,0,20"/>
                                <Button Style="{StaticResource MenuButtonStyle}"
                                        Content="Graph Métro"
                                        Width="200"
                                        Margin="5"
                                        Click="BtnGraphMétro"/>
                                <Button Style="{StaticResource MenuButtonStyle}"
                                        Content="Graph Métro Point"
                                        Width="200"
                                        Margin="5"
                                        Click="BtnGraphMétroAncien"/>
                                <Button Style="{StaticResource MenuButtonStyle}"
                                        Content="Test affichage Dijkstra"
                                        Width="200"
                                        Margin="5"
                                        Click="BtnAffichage_Djikstra"/>
                                <Button Style="{StaticResource MenuButtonStyle}"
                                        Content="Test affichage Bellman-Ford"
                                        Width="200"
                                        Margin="5"
                                        Click="BtnAffichage_BF"/>
                                <Button Style="{StaticResource MenuButtonStyle}"
                                        Content="Test affichage Floyd-Warshall"
                                        Width="200"
                                        Margin="5"
                                        Click="BtnAffichage_Floyd"/>
                                <Button Style="{StaticResource MenuButtonStyle}"
                                        Content="Test Chemin Optimal"
                                        Width="200"
                                        Margin="5"
                                        Click="BtnCheminOptimal"/>
                                <Button Style="{StaticResource MenuButtonStyle}"
                                        Content="Test Tri"
                                        Width="200"
                                        Margin="5"
                                        Click="BtnTri"/>
                                <Button Style="{StaticResource MenuButtonStyle}"
                                        Content="Coloriation De Graph"
                                        Width="200"
                                        Margin="5"
                                        Click="BtnAffichageColoriationDeGraph"/>
                                <Button Style="{StaticResource MenuButtonStyle}"
                                        Content="Test Propriété Graphe"
                                        Width="200"
                                        Margin="5"
                                        Click="BtnPropriétéGraphe"/>
                                <TextBlock x:Name="TxtProprietesGraphe"
                                           FontSize="18"
                                           Margin="10"/>
                        </StackPanel>

                </DockPanel>
        </Grid>
</Page>