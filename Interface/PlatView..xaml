<Page x:Class="ProbSciANA.Interface.PlatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="PlatView">

    <Grid>
      <TextBlock Text="Ajouter un plat"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             FontSize="24"
             FontWeight="Bold" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBox x:Name="NomPlatTextBox" Width="200" Margin="0,0,0,10" PlaceholderText="Nom du plat"/>
            <ComboBox x:Name="TypePlatComboBox" Width="200" Margin="0,0,0,10" PlaceholderText="Type de plat">
                <ComboBoxItem Content="Entrée"/>
                <ComboBoxItem Content="Plat principal"/>
                <ComboBoxItem Content="Dessert"/>
            <TextBox x:Name="NationaliteTextBox" Width="200" Margin="0,0,0,10" PlaceholderText="Nationalité"/>
            <TextBox x:Name="RegimeTextBox" Width="200" Margin="0,0,0,10" PlaceholderText="Régime alimentaire"/>
            <TextBlock Text="Ingrédients" Margin="0,0,0,10"/>
            <ListBox x:Name="IngredientsListBox" Width="200" Height="100" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="NewIngredientTextBox" Width="140" Margin="0,0,10,0" PlaceholderText="Ajouter un ingrédient"/>
                <Button Content="Ajouter" Width="50" Click="BtnAjouterIngredient_Click"/>
            </StackPanel>
            <TextBox x:Name="PrixTextBox" Width="200" Margin="0,0,0,10" PlaceholderText="Prix par personne"/>
            <TextBox x:Name="NombrePersonnesTextBox" Width="200" Margin="0,0,0,10" PlaceholderText="Nombre de personnes"/>

            <TextBlock Text="Date de fabrication" Margin="0,0,0,10"/>
            <DatePicker x:Name="DateFabricationDatePicker" Width="200" Margin="0,0,0,10" />
            <TextBlock Text="Date de péremption" Margin="0,0,0,10"/>
            <DatePicker x:Name="DatePeremptionDatePicker" Width="200" Margin="0,0,0,10" />
            <Button Content="Ajouter le plat" Width="200" Click="BtnAjouterPlat_Click"/>
            <Button Content="Retour" Width="200" Margin="0,10,0,0" Click="BtnRetour_Click"/>
            <Button Content="Retour à l'accueil" Width="200" Margin="0,10,0,0" Click="BtnRetourAccueil_Click"/>
    </Grid>
</Page>