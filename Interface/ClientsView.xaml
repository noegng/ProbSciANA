<Page x:Class="ProbSciANA.Interface.ClientsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ClientsView">

        <DockPanel LastChildFill="True">

                <!-- BANDEAU STYLE UBER -->
                <Grid DockPanel.Dock="Top"
                      Height="50"
                      Background="Black">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="🌙 Mode"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                FontWeight="Bold"
                                Padding="10,0"
                                Click="BtnMode_Click"/>

                        <Button Grid.Column="1"
                                Content="🏠 Accueil"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                FontWeight="Bold"
                                Padding="10,0"
                                Click="BtnAccueil_Click"/>

                        <StackPanel Grid.Column="2"/>

                        <Button Grid.Column="3"
                                Content="Clients"
                                Foreground="White"
                                Background="#BEE6FD"
                                BorderThickness="0"
                                FontWeight="Bold"
                                Padding="10,0"
                                Click="BtnClients_Click"/>

                        <Button Grid.Column="4"
                                Content="Cuisiniers"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                FontWeight="Bold"
                                Padding="10,0"
                                Click="BtnCuisiniers_Click"/>

                        <Button Grid.Column="5"
                                Content="Commandes"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                FontWeight="Bold"
                                Padding="10,0"
                                Click="BtnCommandes_Click"/>

                        <Button Grid.Column="6"
                                Content="Statistiques"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                FontWeight="Bold"
                                Padding="10,0"
                                Click="BtnStatistiques_Click"/>
                </Grid>

                <Grid DockPanel.Dock="Top"
                      Height="50"
                      Background="Transparent">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0">

                                <!-- BACK -->
                                <Button x:Name="BtnBack"
                                        Width="32"
                                        Height="32"
                                        Margin="2"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Précédent"
                                        Click="BtnBack_Click">
                                        <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                                Width="32"
                                                                Height="32"
                                                                CornerRadius="16"
                                                                Background="Transparent"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center">
                                                                <Viewbox Width="16"
                                                                         Height="16">
                                                                        <Grid Width="24"
                                                                              Height="24">
                                                                                <Path x:Name="backArrow"
                                                                                      StrokeThickness="2"
                                                                                      StrokeLineJoin="Round"
                                                                                      StrokeStartLineCap="Round"
                                                                                      StrokeEndLineCap="Round"
                                                                                      Data="M14,4 L6,12 L14,20"
                                                                                      HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"/>
                                                                        </Grid>
                                                                </Viewbox>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver"
                                                                         Value="True">
                                                                        <Setter TargetName="border"
                                                                                Property="Background"
                                                                                Value="#EEE"/>
                                                                </Trigger>
                                                                <Trigger Property="IsEnabled"
                                                                         Value="True">
                                                                        <Setter TargetName="backArrow"
                                                                                Property="Stroke"
                                                                                Value="Black"/>
                                                                </Trigger>
                                                                <Trigger Property="IsEnabled"
                                                                         Value="False">
                                                                        <Setter TargetName="backArrow"
                                                                                Property="Stroke"
                                                                                Value="Gray"/>
                                                                </Trigger>
                                                        </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                        </Button.Template>
                                </Button>

                                <!-- FORWARD -->
                                <Button x:Name="BtnForward"
                                        Width="32"
                                        Height="32"
                                        Margin="2"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Suivant"
                                        Click="BtnForward_Click">
                                        <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                                Width="32"
                                                                Height="32"
                                                                CornerRadius="16"
                                                                Background="Transparent"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center">
                                                                <Viewbox Width="16"
                                                                         Height="16">
                                                                        <Grid Width="24"
                                                                              Height="24">
                                                                                <Path x:Name="forwardArrow"
                                                                                      StrokeThickness="2"
                                                                                      StrokeLineJoin="Round"
                                                                                      StrokeStartLineCap="Round"
                                                                                      StrokeEndLineCap="Round"
                                                                                      Data="M4,4 L12,12 L4,20"
                                                                                      HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"/>
                                                                        </Grid>
                                                                </Viewbox>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver"
                                                                         Value="True">
                                                                        <Setter TargetName="border"
                                                                                Property="Background"
                                                                                Value="#EEE"/>
                                                                </Trigger>
                                                                <Trigger Property="IsEnabled"
                                                                         Value="True">
                                                                        <Setter TargetName="forwardArrow"
                                                                                Property="Stroke"
                                                                                Value="Black"/>
                                                                </Trigger>
                                                                <Trigger Property="IsEnabled"
                                                                         Value="False">
                                                                        <Setter TargetName="forwardArrow"
                                                                                Property="Stroke"
                                                                                Value="Gray"/>
                                                                </Trigger>
                                                        </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                        </Button.Template>
                                </Button>
                        </StackPanel>

                        <!-- Titre -->
                        <TextBlock Text="Gestion des Clients"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Grid.Column="1"/>

                        <!-- Bouton ➕ -->
                        <Button Content="➕"
                                ToolTip="Ajouter un client"
                                FontSize="16"
                                Width="32"
                                Height="32"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="BtnAjouter_Click"
                                Grid.Column="2"/>

                </Grid>

                <!-- Liste des clients -->
                <Grid>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid x:Name="dataGridClients"
                                  Grid.Column="0"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Margin="10"
                                  SelectionChanged="dataGridClients_SelectionChanged"
                                  ColumnWidth="*"
                                  CellEditEnding="dataGridClients_CellEditEnding">
                                <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID"
                                                            Binding="{Binding Id_utilisateur}"
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Statut"
                                                            Binding="{Binding Statut}"/>
                                        <DataGridTextColumn Header="Nom"
                                                            Binding="{Binding Nom}"/>
                                        <DataGridTextColumn Header="Prénom"
                                                            Binding="{Binding Prenom}"/>
                                        <DataGridTextColumn Header="Adresse"
                                                            Binding="{Binding Adresse}"/>
                                        <DataGridTextColumn Header="Email"
                                                            Binding="{Binding Email}"/>
                                        <DataGridTextColumn Header="Téléphone"
                                                            Binding="{Binding Telephone}"/>
                                        <DataGridTextColumn Header="Station"
                                                            Binding="{Binding NomStation}"/>
                                        <DataGridTextColumn Header="Achats"
                                                            Binding="{Binding Achats}"
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Date d'inscription"
                                                            Binding="{Binding Date_inscription}"
                                                            IsReadOnly="True"/>
                                </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Grid.Column="1"
                                    Margin="10"
                                    Background="#FFF3F3F3"
                                    VerticalAlignment="Top">
                                <DockPanel LastChildFill="True"
                                           Margin="0 0 0 10">
                                        <TextBlock Text="Fiche Client"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   DockPanel.Dock="Left"/>

                                        <Button Content="🗑️"
                                                FontSize="14"
                                                Width="30"
                                                Height="30"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Click="BtnSupprimer_Click"
                                                DockPanel.Dock="Right"/>
                                </DockPanel>
                                <Grid Margin="0 0 0 10">
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Nom -->
                                        <TextBlock Text="Nom :"
                                                   FontWeight="Bold"
                                                   Margin="0 0 10 5"
                                                   Grid.Row="0"
                                                   Grid.Column="0"/>
                                        <TextBlock Text="{Binding Nom}"
                                                   HorizontalAlignment="Right"
                                                   Grid.Row="0"
                                                   Grid.Column="1"/>

                                        <!-- Prénom -->
                                        <TextBlock Text="Prénom :"
                                                   FontWeight="Bold"
                                                   Margin="0 0 10 5"
                                                   Grid.Row="1"
                                                   Grid.Column="0"/>
                                        <TextBlock Text="{Binding Prenom}"
                                                   HorizontalAlignment="Right"
                                                   Grid.Row="1"
                                                   Grid.Column="1"/>

                                        <!-- Email -->
                                        <TextBlock Text="Email :"
                                                   FontWeight="Bold"
                                                   Margin="0 0 10 5"
                                                   Grid.Row="2"
                                                   Grid.Column="0"/>
                                        <TextBlock Text="{Binding Email}"
                                                   HorizontalAlignment="Right"
                                                   Grid.Row="2"
                                                   Grid.Column="1"/>

                                        <!-- Adresse -->
                                        <TextBlock Text="Adresse :"
                                                   FontWeight="Bold"
                                                   Margin="0 0 10 5"
                                                   Grid.Row="3"
                                                   Grid.Column="0"/>
                                        <TextBlock Text="{Binding Adresse}"
                                                   HorizontalAlignment="Right"
                                                   Grid.Row="3"
                                                   Grid.Column="1"/>

                                        <!-- Téléphone -->
                                        <TextBlock Text="Téléphone :"
                                                   FontWeight="Bold"
                                                   Margin="0 0 10 5"
                                                   Grid.Row="4"
                                                   Grid.Column="0"/>
                                        <TextBlock Text="{Binding Telephone}"
                                                   HorizontalAlignment="Right"
                                                   Grid.Row="4"
                                                   Grid.Column="1"/>

                                        <!-- Statut -->
                                        <TextBlock Text="Statut :"
                                                   FontWeight="Bold"
                                                   Margin="0 0 10 5"
                                                   Grid.Row="5"
                                                   Grid.Column="0"/>
                                        <TextBlock Text="{Binding Statut}"
                                                   HorizontalAlignment="Right"
                                                   Grid.Row="5"
                                                   Grid.Column="1"/>

                                        <!-- Station -->
                                        <TextBlock Text="Station :"
                                                   FontWeight="Bold"
                                                   Margin="0 0 10 0"
                                                   Grid.Row="6"
                                                   Grid.Column="0"/>
                                        <TextBlock Text="{Binding NomStation}"
                                                   HorizontalAlignment="Right"
                                                   Grid.Row="6"
                                                   Grid.Column="1"/>
                                </Grid>

                                <Expander Header="Afficher les commandes passées"
                                          FontWeight="Bold"
                                          Background="WhiteSmoke"
                                          Foreground="Black"
                                          Margin="0,10,0,0"
                                          ExpandDirection="Down">
                                        <Border BorderThickness="1"
                                                BorderBrush="Gray"
                                                Padding="5"
                                                Background="White">
                                                <ScrollViewer MaxHeight="150"
                                                              VerticalScrollBarVisibility="Auto">
                                                        <ListBox ItemsSource="{Binding Commandes_passees}">
                                                                <ListBox.ItemTemplate>
                                                                        <DataTemplate>
                                                                                <StackPanel Orientation="Horizontal">
                                                                                        <TextBlock Text="Commande #"
                                                                                                   FontWeight="Bold"/>
                                                                                        <TextBlock Text="{Binding Id_commande}"
                                                                                                   Margin="5,0"/>
                                                                                        <TextBlock Text=" - "/>
                                                                                        <TextBlock Text="{Binding Prix}"
                                                                                                   Margin="5,0"/>
                                                                                        <TextBlock Text="€"/>
                                                                                </StackPanel>
                                                                        </DataTemplate>
                                                                </ListBox.ItemTemplate>
                                                        </ListBox>
                                                </ScrollViewer>
                                        </Border>
                                </Expander>

                                <Expander Header="Afficher les avis laissés"
                                          FontWeight="Bold"
                                          Background="WhiteSmoke"
                                          Foreground="Black"
                                          Margin="0,10,0,0"
                                          ExpandDirection="Down">
                                        <Border BorderThickness="1"
                                                BorderBrush="Gray"
                                                Padding="5"
                                                Background="White">
                                                <ScrollViewer MaxHeight="150"
                                                              VerticalScrollBarVisibility="Auto">
                                                        <ListBox ItemsSource="{Binding Avis_laisses}">
                                                                <ListBox.ItemTemplate>
                                                                        <DataTemplate>
                                                                                <StackPanel Orientation="Horizontal">
                                                                                        <TextBlock Text="Avis #"
                                                                                                   FontWeight="Bold"/>
                                                                                        <TextBlock Text="{Binding Id_avis}"
                                                                                                   Margin="5,0"/>
                                                                                        <TextBlock Text=" - "/>
                                                                                        <TextBlock Text="{Binding NomCuisinier}"
                                                                                                   Margin="5,0"/>
                                                                                        <TextBlock Text="{Binding Note}"/>
                                                                                        <TextBlock Text=" /5"/>
                                                                                </StackPanel>
                                                                        </DataTemplate>
                                                                </ListBox.ItemTemplate>
                                                        </ListBox>
                                                </ScrollViewer>
                                        </Border>
                                </Expander>

                                <Expander Header="Afficher la liste des cuisiniers"
                                          FontWeight="Bold"
                                          Background="WhiteSmoke"
                                          Foreground="Black"
                                          Margin="0,10,0,0"
                                          ExpandDirection="Down">
                                        <Border BorderThickness="1"
                                                BorderBrush="Gray"
                                                Padding="5"
                                                Background="White">
                                                <ScrollViewer MaxHeight="150"
                                                              VerticalScrollBarVisibility="Auto">
                                                        <ListBox ItemsSource="{Binding SesCuisiniers}">
                                                                <ListBox.ItemTemplate>
                                                                        <DataTemplate>
                                                                                <StackPanel Orientation="Horizontal">
                                                                                        <TextBlock Text="Utilisateur #"
                                                                                                   FontWeight="Bold"/>
                                                                                        <TextBlock Text="{Binding Id_utilisateur}"
                                                                                                   Margin="5,0"/>
                                                                                        <TextBlock Text=" - "/>
                                                                                        <TextBlock Text="{Binding Prenom}"/>
                                                                                        <TextBlock Text=" "/>
                                                                                        <TextBlock Text="{Binding Nom}"/>
                                                                                </StackPanel>
                                                                        </DataTemplate>
                                                                </ListBox.ItemTemplate>
                                                        </ListBox>
                                                </ScrollViewer>
                                        </Border>
                                </Expander>

                        </StackPanel>
                </Grid>
        </DockPanel>
</Page>
