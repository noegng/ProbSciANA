<Page x:Class="ProbSciANA.Interface.ClientsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ClientsView">

    <DockPanel LastChildFill="True">

        <!-- Titre -->
        <TextBlock DockPanel.Dock="Top"
                   Text="Gestion des Clients"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="10"/>

        <!-- Boutons d'action -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button Style="{StaticResource MenuButtonStyle}"
                    Content="Ajouter un client"
                    Click="BtnAjouter_Click"/>
            <Button Style="{StaticResource MenuButtonStyle}"
                    Content="Supprimer"
                    Click="BtnSupprimer_Click"/>
            <Button Style="{StaticResource MenuButtonStyle}"
                    Content="Modifier"
                    Click="BtnModifier_Click"/>
        </StackPanel>

        <!-- Liste des clients -->
        <Grid>
            <DataGrid x:Name="dataGridClients"
                      AutoGenerateColumns="False"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding Id_utilisateur}"/>
                    <DataGridTextColumn Header="Statut"
                                        Binding="{Binding Statut}"/>
                    <DataGridTextColumn Header="Nom"
                                        Binding="{Binding Nom}"/>
                    <DataGridTextColumn Header="Prénom"
                                        Binding="{Binding Prenom}"/>
                    <DataGridTextColumn Header="Adresse"
                                        Binding="{Binding Adresse}"/>
                    <DataGridTextColumn Header="Email"
                                        Binding="{Binding Email}"/>
                    <DataGridTextColumn Header="Téléphone"
                                        Binding="{Binding Telephone}"/>
                    <DataGridTextColumn Header="Achats"
                                        Binding="{Binding Achats}"/>
                    <DataGridTextColumn Header="Date d'inscription"
                                        Binding="{Binding Date_inscription}"/>
                    <DataGridTextColumn Header="Station"
                                        Binding="{Binding NomStation}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Bouton retour -->
        <Button Style="{StaticResource MenuButtonStyle}"
                DockPanel.Dock="Bottom"
                Content="Retour à l'accueil"
                HorizontalAlignment="Center"
                Margin="10"
                Click="BtnRetourAccueil_Click"/>
    </DockPanel>
</Page>
