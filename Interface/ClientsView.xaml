<Page x:Class="ProbSciANA.Interface.ClientsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ClientsView">

        <DockPanel LastChildFill="True">

                <!-- Titre -->
                <TextBlock DockPanel.Dock="Top"
                           Text="Gestion des Clients"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="10"/>

                <!-- Boutons d'action -->
                <StackPanel DockPanel.Dock="Top"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="10">
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Content="Ajouter un client"
                                Click="BtnAjouter_Click"/>
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Content="Supprimer"
                                Click="BtnSupprimer_Click"/>
                </StackPanel>

                <!-- Liste des clients -->
                <Grid>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid x:Name="dataGridClients"
                                  Grid.Column="0"
                                  AutoGenerateColumns="False"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Margin="10"
                                  SelectionChanged="dataGridClients_SelectionChanged">
                                <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID"
                                                            Binding="{Binding Id_utilisateur}"
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Statut"
                                                            Binding="{Binding Statut}"/>
                                        <DataGridTextColumn Header="Nom"
                                                            Binding="{Binding Nom}"/>
                                        <DataGridTextColumn Header="Prénom"
                                                            Binding="{Binding Prenom}"/>
                                        <DataGridTextColumn Header="Adresse"
                                                            Binding="{Binding Adresse}"/>
                                        <DataGridTextColumn Header="Email"
                                                            Binding="{Binding Email}"/>
                                        <DataGridTextColumn Header="Téléphone"
                                                            Binding="{Binding Telephone}"/>
                                        <DataGridTextColumn Header="Station"
                                                            Binding="{Binding NomStation}"
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Achats"
                                                            Binding="{Binding Achats}"
                                                            IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Date d'inscription"
                                                            Binding="{Binding Date_inscription}"
                                                            IsReadOnly="True"/>
                                </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Grid.Column="1"
                                    Margin="10"
                                    Background="#FFF3F3F3"
                                    VerticalAlignment="Top">
                                <TextBlock Text="Fiche Client"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0 0 0 10"/>
                                <TextBlock Text="Nom :"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding Nom}"
                                           Margin="0 0 0 10"/>
                                <TextBlock Text="Prénom :"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding Prenom}"
                                           Margin="0 0 0 10"/>
                                <TextBlock Text="Email :"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding Email}"
                                           Margin="0 0 0 10"/>
                                <TextBlock Text="Adresse :"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding Adresse}"
                                           Margin="0 0 0 10"/>
                                <TextBlock Text="Téléphone :"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding Telephone}"
                                           Margin="0 0 0 10"/>
                                <TextBlock Text="Statut :"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding Statut}"
                                           Margin="0 0 0 10"/>
                                <TextBlock Text="Station :"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding NomStation}"
                                           Margin="0 0 0 10"/>
                        </StackPanel>
                </Grid>

                <!-- Bouton retour -->
                <Button Style="{StaticResource MenuButtonStyle}"
                        DockPanel.Dock="Bottom"
                        Content="Retour à l'accueil"
                        HorizontalAlignment="Center"
                        Margin="10"
                        Click="BtnRetourAccueil_Click"/>
        </DockPanel>
</Page>
