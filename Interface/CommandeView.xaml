<Page x:Class="ProbSciANA.Interface.CommandeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      Title="CommandeView">

    <Page.Resources>

        <x:Array x:Key="StatutValues"
                 Type="{x:Type sys:String}">
            <sys:String>en attente</sys:String>
            <sys:String>en cours</sys:String>
            <sys:String>fait</sys:String>
        </x:Array>

    </Page.Resources>

    <DockPanel LastChildFill="True">

        <!-- BANDEAU STYLE UBER -->
        <Grid DockPanel.Dock="Top"
              Height="50"
              Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="🌙 Mode"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Padding="10,0"
                    Click="BtnMode_Click"/>

            <Button Grid.Column="1"
                    Content="🏠 Accueil"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Padding="10,0"
                    Click="BtnAccueil_Click"/>

            <StackPanel Grid.Column="2"/>

            <Button Grid.Column="3"
                    Content="Commandes"
                    Foreground="White"
                    Background="#BEE6FD"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Padding="10,0"/>

            <Button Grid.Column="4"
                    Content="Avis"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Padding="10,0"
                    Click="AfficherAvis_Click"/>

            <Button Grid.Column="5"
                    Content="Plats"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Padding="10,0"
                    Click="AfficherPlats_Click"/>

            <Button Grid.Column="6"
                    Content="Clients"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Padding="10,0"
                    Click="AfficherClients_Click"/>
        </Grid>

        <Grid DockPanel.Dock="Top"
              Height="50"
              Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0">

                <!-- BACK -->
                <Button x:Name="BtnBack"
                        Width="32"
                        Height="32"
                        Margin="2"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Précédent"
                        Click="BtnBack_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Width="32"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="Transparent"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Viewbox Width="16"
                                         Height="16">
                                    <Grid Width="24"
                                          Height="24">
                                        <Path x:Name="backArrow"
                                              StrokeThickness="2"
                                              StrokeLineJoin="Round"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round"
                                              Data="M14,4 L6,12 L14,20"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Grid>
                                </Viewbox>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="border"
                                            Property="Background"
                                            Value="#EEE"/>
                                </Trigger>
                                <Trigger Property="IsEnabled"
                                         Value="True">
                                    <Setter TargetName="backArrow"
                                            Property="Stroke"
                                            Value="Black"/>
                                </Trigger>
                                <Trigger Property="IsEnabled"
                                         Value="False">
                                    <Setter TargetName="backArrow"
                                            Property="Stroke"
                                            Value="Gray"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- FORWARD -->
                <Button x:Name="BtnForward"
                        Width="32"
                        Height="32"
                        Margin="2"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Suivant"
                        Click="BtnForward_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Width="32"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="Transparent"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Viewbox Width="16"
                                         Height="16">
                                    <Grid Width="24"
                                          Height="24">
                                        <Path x:Name="forwardArrow"
                                              StrokeThickness="2"
                                              StrokeLineJoin="Round"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round"
                                              Data="M4,4 L12,12 L4,20"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Grid>
                                </Viewbox>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="border"
                                            Property="Background"
                                            Value="#EEE"/>
                                </Trigger>
                                <Trigger Property="IsEnabled"
                                         Value="True">
                                    <Setter TargetName="forwardArrow"
                                            Property="Stroke"
                                            Value="Black"/>
                                </Trigger>
                                <Trigger Property="IsEnabled"
                                         Value="False">
                                    <Setter TargetName="forwardArrow"
                                            Property="Stroke"
                                            Value="Gray"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>

            <!-- Titre -->
            <TextBlock Text="Votre Tableau de Bord"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Grid.Column="1"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="dataGridCommandes"
                      Grid.Column="0"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Margin="10"
                      SelectionChanged="dataGridCommandes_SelectionChanged"
                      ColumnWidth="*">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding Id_commande}"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Nom"
                                        Binding="{Binding Nom}"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Prix"
                                        Binding="{Binding Prix}"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Date"
                                        Binding="{Binding Date_commande}"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Client"
                                        Binding="{Binding NomClient}"
                                        IsReadOnly="True"/>
                    <DataGridComboBoxColumn Header="Statut"
                                            ItemsSource="{StaticResource StatutValues}"
                                            SelectedItemBinding="{Binding Statut, Mode=TwoWay}"
                                            Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel x:Name="FicheClient"
                        Grid.Column="1"
                        Margin="10"
                        Background="#FFF3F3F3"
                        VerticalAlignment="Top">
                <DockPanel LastChildFill="True"
                           Margin="0 0 0 10">
                    <TextBlock Text="Fiche Client"
                               FontSize="18"
                               FontWeight="Bold"
                               DockPanel.Dock="Left"/>

                    <Button Content="❌"
                            FontSize="14"
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="BtnAnnuler_Click"
                            DockPanel.Dock="Right"/>

                    <Button Content="✅"
                            FontSize="14"
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="BtnValider_Click"
                            DockPanel.Dock="Right"/>
                </DockPanel>

                <!-- Carte d'aurelien -->

                <!-- Les trois expanders pour naviguer dans les listes -->
                <StackPanel>
                    <Expander Header="Adresses à desservir"
                              Margin="0,10,0,0">
                        <ListBox x:Name="ListAdresses"
                                 ItemsSource="{Binding Adresses_a_desservir}"
                                 DisplayMemberPath="Adresse"
                                 SelectionChanged="OnListAdresses_Selected"/>
                    </Expander>

                    <Expander Header="Plats à préparer"
                              Margin="0,10,0,0">
                        <ListBox x:Name="ListPlats"
                                 ItemsSource="{Binding Plats_a_cuisiner}"
                                 DisplayMemberPath="Nom"
                                 SelectionChanged="OnListPlats_Selected"/>
                    </Expander>

                    <!-- Le détail unique qui se met à jour selon la sélection -->
                    <ContentControl Margin="0,20,0,0">
                        <ContentControl.Content>
                            <MultiBinding Converter="{StaticResource FirstNonNullConverter}">
                                <!-- On teste d’abord Avis -->
                                <Binding ElementName="ListAvis"
                                         Path="SelectedItem"/>
                                <!-- puis Cuisiniers -->
                                <Binding ElementName="ListCuisiniers"
                                         Path="SelectedItem"/>
                                <!-- et enfin Commandes -->
                                <Binding ElementName="ListCommandes"
                                         Path="SelectedItem"/>
                            </MultiBinding>
                        </ContentControl.Content>
                    </ContentControl>
                </StackPanel>
            </StackPanel>

        </Grid>

    </DockPanel>
</Page>