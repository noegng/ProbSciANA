<Page x:Class="ProbSciANA.Interface.AdminDashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AdminDashboardView">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Panneau d'administration" FontSize="20" Margin="0,0,0,20"/>
        <Button Style="{StaticResource MenuButtonStyle}" Content="Gérer les Clients" Width="200" Margin="5" Click="BtnClients_Click"/>
        <Button Style="{StaticResource MenuButtonStyle}" Content="Gérer les Cuisiniers" Width="200" Margin="5" Click="BtnCuisiniers_Click"/>
        <Button Style="{StaticResource MenuButtonStyle}" Content="Voir les Commandes" Width="200" Margin="5" Click="BtnCommandes_Click"/>
        <Button Style="{StaticResource MenuButtonStyle}" Content="Voir les Statistiques" Width="200" Margin="5" Click="BtnStatistiques_Click"/>
        <Button Style="{StaticResource MenuButtonStyle}" Content="Retour à l'accueil" Width="200" Height="35" Margin="10"
        Click="BtnRetourAccueil_Click"/>
    </StackPanel>
</Page>
