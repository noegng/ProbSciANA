<Page x:Class="ProbSciANA.Interface.ConnexionView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ConnexionView">

    <DockPanel LastChildFill="True">
        <!-- Contenu principal -->
        <StackPanel DockPanel.Dock="Top" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Connexion à un compte" FontSize="20" Margin="0,0,0,20"/>

            <!-- Liste des utilisateurs -->
            <TextBlock Text="Utilisateur :" Margin="5"/>
            <ComboBox x:Name="UserComboBox" Width="250" Margin="5"/>

            <!-- Mot de passe -->
            <TextBlock Text="Mot de passe :" Margin="5,10,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="250" Height="30" Margin="5"/>

            <!-- Bouton Connexion -->
            <Button Style="{StaticResource MenuButtonStyle}" Content="Connexion" Width="250" Margin="10"
                    Click="BtnConnexion_Click"/>
        </StackPanel>

        <!-- Bouton Retour à l'accueil -->
        <Button Style="{StaticResource MenuButtonStyle}" DockPanel.Dock="Bottom" Content="Retour à l'accueil"
                HorizontalAlignment="Center" Margin="0,20" Click="BtnRetourAccueil_Click"/>
    </DockPanel>
</Page>
