<Page x:Class="ProbSciANA.Interface.CommandesViewAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CommandesViewAdmin">

    <Grid>
        <Image Source="Images/.png"
               Stretch="UniformToFill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               IsHitTestVisible="False"/>

        <DockPanel LastChildFill="True">

            <!-- BANDEAU STYLE UBER -->
            <Grid DockPanel.Dock="Top"
                  Height="50"
                  Background="Black">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="🌙 Mode"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Padding="10,0"
                        Click="BtnMode_Click"/>

                <Button Grid.Column="1"
                        Content="🏠 Accueil"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Padding="10,0"
                        Click="BtnAccueil_Click"/>

                <StackPanel Grid.Column="2"/>

                <Button Grid.Column="3"
                        Content="Clients"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Padding="10,0"
                        Click="BtnClients_Click"/>

                <Button Grid.Column="4"
                        Content="Cuisiniers"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Padding="10,0"
                        Click="BtnCuisiniers_Click"/>

                <Button Grid.Column="5"
                        Content="Commandes"
                        Foreground="White"
                        Background="#BEE6FD"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Padding="10,0"
                        Click="BtnCommandes_Click"/>
            </Grid>

            <!-- FLÈCHES NAVIGATION (Chrome style) -->
            <Grid DockPanel.Dock="Top"
                  Height="50"
                  Background="Transparent">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0">

                    <!-- BACK -->
                    <Button x:Name="BtnBack"
                            Width="32"
                            Height="32"
                            Margin="2"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Précédent"
                            Click="BtnBack_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Width="32"
                                        Height="32"
                                        CornerRadius="16"
                                        Background="Transparent"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <Viewbox Width="16"
                                             Height="16">
                                        <Grid Width="24"
                                              Height="24">
                                            <Path x:Name="backArrow"
                                                  StrokeThickness="2"
                                                  StrokeLineJoin="Round"
                                                  StrokeStartLineCap="Round"
                                                  StrokeEndLineCap="Round"
                                                  Data="M14,4 L6,12 L14,20"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        </Grid>
                                    </Viewbox>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter TargetName="border"
                                                Property="Background"
                                                Value="#EEE"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled"
                                             Value="True">
                                        <Setter TargetName="backArrow"
                                                Property="Stroke"
                                                Value="Black"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled"
                                             Value="False">
                                        <Setter TargetName="backArrow"
                                                Property="Stroke"
                                                Value="Gray"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- FORWARD -->
                    <Button x:Name="BtnForward"
                            Width="32"
                            Height="32"
                            Margin="2"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Suivant"
                            Click="BtnForward_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Width="32"
                                        Height="32"
                                        CornerRadius="16"
                                        Background="Transparent"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <Viewbox Width="16"
                                             Height="16">
                                        <Grid Width="24"
                                              Height="24">
                                            <Path x:Name="forwardArrow"
                                                  StrokeThickness="2"
                                                  StrokeLineJoin="Round"
                                                  StrokeStartLineCap="Round"
                                                  StrokeEndLineCap="Round"
                                                  Data="M4,4 L12,12 L4,20"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        </Grid>
                                    </Viewbox>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter TargetName="border"
                                                Property="Background"
                                                Value="#EEE"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled"
                                             Value="True">
                                        <Setter TargetName="forwardArrow"
                                                Property="Stroke"
                                                Value="Black"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled"
                                             Value="False">
                                        <Setter TargetName="forwardArrow"
                                                Property="Stroke"
                                                Value="Gray"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <!-- Titre -->
                <TextBlock Text="Gestion des Commandes"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Grid.Column="1"/>

                <!-- Bouton ➕ -->
                <Button Content="➕"
                        ToolTip="Ajouter une commande"
                        FontSize="16"
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="BtnAjouter_Click"
                        Grid.Column="2"/>
            </Grid>

            <!-- Liste des clients -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="dataGridCommandes"
                          Grid.Column="0"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Margin="10"
                          SelectionChanged="dataGridCommandes_SelectionChanged"
                          ColumnWidth="*">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"
                                            Binding="{Binding Id_commande}"
                                            IsReadOnly="True"/>
                        <DataGridTextColumn Header="Statut"
                                            Binding="{Binding Statut}"/>
                        <DataGridTextColumn Header="Nom"
                                            Binding="{Binding Nom}"/>
                        <DataGridTextColumn Header="Prix"
                                            Binding="{Binding Prix}"/>
                        <DataGridTextColumn Header="Client"
                                            Binding="{Binding NomClient}"/>
                        <DataGridTextColumn Header="Cuisinier"
                                            Binding="{Binding NomCuisinier}"/>
                        <DataGridTextColumn Header="Date Commande"
                                            Binding="{Binding Date_commande}"
                                            IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Column="1"
                            Margin="10"
                            Background="#FFF3F3F3"
                            VerticalAlignment="Top">
                    <DockPanel LastChildFill="True"
                               Margin="0 0 0 10">
                        <TextBlock Text="Fiche Commande"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   DockPanel.Dock="Left"/>

                        <TextBlock Text="{Binding Moyenne}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Center"/>

                        <Button Content="🗑️"
                                FontSize="14"
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="BtnSupprimer_Click"
                                DockPanel.Dock="Right"/>
                    </DockPanel>
                    <Grid Margin="0 0 0 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Nom -->
                        <TextBlock Text="Nom :"
                                   FontWeight="Bold"
                                   Margin="0 0 10 5"
                                   Grid.Row="0"
                                   Grid.Column="0"/>
                        <TextBlock Text="{Binding Nom}"
                                   HorizontalAlignment="Right"
                                   Grid.Row="0"
                                   Grid.Column="1"/>

                        <!-- Statut -->
                        <TextBlock Text="Statut :"
                                   FontWeight="Bold"
                                   Margin="0 0 10 5"
                                   Grid.Row="1"
                                   Grid.Column="0"/>
                        <TextBlock Text="{Binding Statut}"
                                   HorizontalAlignment="Right"
                                   Grid.Row="1"
                                   Grid.Column="1"/>

                        <!-- Prix -->
                        <TextBlock Text="Prix :"
                                   FontWeight="Bold"
                                   Margin="0 0 10 5"
                                   Grid.Row="2"
                                   Grid.Column="0"/>
                        <TextBlock Text="{Binding Prix}"
                                   HorizontalAlignment="Right"
                                   Grid.Row="2"
                                   Grid.Column="1"/>

                        <!-- Client -->
                        <TextBlock Text="Client :"
                                   FontWeight="Bold"
                                   Margin="0 0 10 5"
                                   Grid.Row="3"
                                   Grid.Column="0"/>
                        <TextBlock Text="{Binding NomClient}"
                                   HorizontalAlignment="Right"
                                   Grid.Row="3"
                                   Grid.Column="1"/>

                        <!-- Cuisinier -->
                        <TextBlock Text="Cuisinier :"
                                   FontWeight="Bold"
                                   Margin="0 0 10 5"
                                   Grid.Row="4"
                                   Grid.Column="0"/>
                        <TextBlock Text="{Binding NomCuisinier}"
                                   HorizontalAlignment="Right"
                                   Grid.Row="4"
                                   Grid.Column="1"/>

                        <!-- Date Commande -->
                        <TextBlock Text="Date :"
                                   FontWeight="Bold"
                                   Margin="0 0 10 5"
                                   Grid.Row="5"
                                   Grid.Column="0"/>
                        <TextBlock Text="{Binding Date_commande}"
                                   HorizontalAlignment="Right"
                                   Grid.Row="5"
                                   Grid.Column="1"/>
                    </Grid>
                </StackPanel>
            </Grid>

        </DockPanel>
    </Grid>
</Page>
